    </graphicData>
    <statBases>
      <MaxHitPoints>20</MaxHitPoints>
      <Flammability>3.0</Flammability>
      <Beauty>0.3</Beauty>
      <WorkToBuild>30</WorkToBuild>
      <Mass>3</Mass>
      <BedRestEffectiveness>0.6</BedRestEffectiveness>
      <Comfort>0.10</Comfort>
      <ImmunityGainSpeedFactor>0.98</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>0.98</SurgerySuccessChanceFactor>
