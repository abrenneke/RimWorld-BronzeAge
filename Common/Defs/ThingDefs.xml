<?xml version="1.0" encoding="utf-8" ?> 
<Defs>
  <!-- Straw Bed -->
  <StuffCategoryDef>
    <defName>StrawLike</defName>
    <label>straw-like</label>
  </StuffCategoryDef>
  <ThingDef ParentName="BedBase">
    <defName>Bed_Straw</defName>
    <label>straw bed</label>
    <description>Straw or leaves spread out on the ground. Very cheap and more comfortable than sleeping on the floor, but ugly and not as good as a real bed.</description>
    <graphicData>
      <texPath>Things/Furniture/StrawBed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2, 2)</drawSize>
      <damageData>
        <rect>(0,0.05,1,1.95)</rect>
      </damageData>
    </graphicData>
    <statBases>
      <MaxHitPoints>10</MaxHitPoints>
      <Flammability>3.0</Flammability>
      <Beauty>0.3</Beauty>
      <WorkToBuild>20</WorkToBuild>
      <Mass>3</Mass>
      <BedRestEffectiveness>0.6</BedRestEffectiveness>
      <Comfort>0.10</Comfort>
      <ImmunityGainSpeedFactor>0.98</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>0.98</SurgerySuccessChanceFactor>
    </statBases>
    <size>(1, 2)</size>
    <stuffCategories>
      <li>StrawLike</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <building>
      <bed_showSleeperBody>True</bed_showSleeperBody>
      <bed_healPerDay>3</bed_healPerDay>
    </building>
    <fillPercent>0.3</fillPercent>
    <pathCost>0</pathCost>
    <staticSunShadowHeight>0</staticSunShadowHeight>
    <castEdgeShadows>False</castEdgeShadows>
    <techLevel>Neolithic</techLevel>
    <uiIconScale>0.90</uiIconScale>
    <designationCategory>Furniture</designationCategory>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
        </linkableFacilities>
      </li>
    </comps>
  </ThingDef>
