  <!-- Wrought Iron -->
  <ThingDef ParentName="ResourceBase">
    <defName>WroughtIron</defName>
    <label>wrought iron</label>
    <description>Refined iron with low impurities. Easy to work with, but rather soft, so it does not make for good weapons. Prone to rusting.</description>
    <graphicData>
      <texPath>Things/Item/Resource/WroughtIron</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>1.3</MarketValue>
      <Mass>0.5</Mass>
      <StuffPower_Armor_Sharp>0.6</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.35</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.61</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.7</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.9</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>true</smeltable>
    <stuffProps>
      <stuffAdjective>wrought iron</stuffAdjective>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>1.00</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(110,74,64)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>1.5</MaxHitPoints>
        <Beauty>0.75</Beauty>
        <Flammability>0.0</Flammability>
        <WorkToMake>0.5</WorkToMake>
        <WorkToBuild>0.5</WorkToBuild>
      </statFactors>
    </stuffProps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
  </ThingDef>

  <!-- Random Seeds -->
  <ThingDef>
    <defName>RandomSeed</defName>
    <label>random seed</label>
    <thingClass>Thing</thingClass>
    <category>Item</category>
    <description>A random plant seed at the current technology level or appropriate biome.</description>
    <graphicData>
      <texPath>Things/Item/Seeds/Seeds</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <useHitPoints>true</useHitPoints>
    <altitudeLayer>Item</altitudeLayer>
    <statBases>
      <MaxHitPoints>1</MaxHitPoints>
      <DeteriorationRate>10</DeteriorationRate>
    </statBases>
  </ThingDef>

  <!-- Log Walls -->
  <ThingDef ParentName="BuildingBase" Name="Wall">
    <defName>LogWall</defName>
    <label>log wall</label>
    <description>An impassable wall made of cut logs. Gives a homey feel, but uses a lot of material.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Building/Linked/LogWall</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Linked/LogWall_MenuIcon</uiIconPath>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>135</WorkToBuild>
      <Flammability>1.0</Flammability>
      <MeditationFocusStrength>0.22</MeditationFocusStrength>
    </statBases>
    <costStuffCount>7</costStuffCount>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <useStuffTerrainAffordance>false</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <holdsRoof>true</holdsRoof>
    <designationCategory>Structure</designationCategory>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <fertility>0</fertility>
    <stuffCategories>
      <li>RawWoody</li>
    </stuffCategories>
    <building>
      <isInert>true</isInert>
      <ai_chillDestination>false</ai_chillDestination>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
    <comps>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Minimal</li>
        </focusTypes>
      </li>
    </comps>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>2</multiplier>
      </li>
    </damageMultipliers>
    <designationHotKey>Misc3</designationHotKey>
  </ThingDef>

  <!-- Ironwood Lumber -->
  <ThingDef ParentName="ResourceVerbBase">
    <defName>RawIronwood</defName>
    <label>ironwood log</label>
    <description>Wood from the ironwood tree. Ironwood is stronger and more beautiful than normal wood. Useful for building structures and weapons.</description>
    <graphicData>
      <texPath>Things/Item/IronWoodLog</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Wood_Drop</soundDrop>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>0.4</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.35</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stuffProps>
      <stuffAdjective>log</stuffAdjective>
      <categories>
        <li>RawWoody</li>
      </categories>
      <commonality>1.00</commonality>
      <color>(86,62,44)</color>
      <appearance>Planks</appearance>
      <constructEffect>ConstructWood</constructEffect>
      <soundImpactStuff>BulletImpact_Wood</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Wood</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Wood</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>0.50</MaxHitPoints>
        <Beauty>0.7</Beauty>
        <Flammability>1</Flammability>
        <WorkToMake>2.0</WorkToMake>
        <WorkToBuild>2.0</WorkToBuild>
        <DoorOpenSpeed>1.5</DoorOpenSpeed>
      </statFactors>
    </stuffProps>
    <tools>
      <li>
        <label>log</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="ResourceBase">
    <defName>GreenIronwoodLumber</defName>
    <label>green ironwood lumber</label>
    <description>This ironwood lumber has been cut from logs, but has yet to be dried out in a controlled environment.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Lumber_Any</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(90,80,53)</color>
    </graphicData>
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Wood_Drop</soundDrop>
    <statBases>
      <MarketValue>1.4</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>0.4</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.35</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stuffProps>
      <stuffAdjective>rough ironwood</stuffAdjective>
      <categories>
        <li>Woody</li>
      </categories>
      <commonality>1.00</commonality>
      <color>(90,80,53)</color>
      <appearance>Planks</appearance>
      <constructEffect>ConstructWood</constructEffect>
      <soundImpactStuff>BulletImpact_Wood</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Wood</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Wood</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>0.60</MaxHitPoints>
        <Beauty>0.9</Beauty>
        <Flammability>0.9</Flammability>
        <WorkToMake>1.5</WorkToMake>
        <WorkToBuild>1.5</WorkToBuild>
        <DoorOpenSpeed>1.3</DoorOpenSpeed>
      </statFactors>
    </stuffProps>
  </ThingDef>
</Defs>