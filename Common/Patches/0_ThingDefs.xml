<?xml version="1.0" encoding="utf-8" ?> 
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Simple Chains: Lumber</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>VGP Vegetable Garden</li>
      </mods>
      <match Class="PatchOperationSequence">
        <operations>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName='VG_IronWoodLog']/label</xpath>
            <value>
              <label>ironwood lumber</label>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName='VG_IronWoodLog']/description</xpath>
            <value>
              <description>Ironwood lumber is stronger and more beautiful then normal lumber. Useful for building structures, weapons, and even simple prosthetics. Very beautiful decorative material.</description>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName='VG_IronWoodLog']/graphicData/texPath</xpath>
            <value>
              <texPath>Things/Item/Resource/Lumber_Any</texPath>
            </value>
          </li>
          <li Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName='VG_IronWoodLog']/graphicData</xpath>
            <value>
              <color>(131, 131, 131)</color>
            </value>
          </li>
          <li Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value>
              <ThingDef ParentName="ResourceVerbBase">
                <defName>RawIronwood</defName>
                <label>ironwood log</label>
                <description>Wood from the ironwood tree. Ironwood is stronger and more beautiful than normal wood. Useful for building structures and weapons.</description>
                <graphicData>
                  <texPath>Things/Item/IronWoodLog</texPath>
                  <graphicClass>Graphic_StackCount</graphicClass>
                </graphicData>
                <equippedAngleOffset>-20</equippedAngleOffset>
                <soundInteract>Wood_Drop</soundInteract>
                <soundDrop>Wood_Drop</soundDrop>
                <statBases>
                  <MarketValue>1.2</MarketValue>
                  <MaxHitPoints>150</MaxHitPoints>
                  <Mass>0.4</Mass>
                  <Flammability>1.0</Flammability>
                  <DeteriorationRate>0.35</DeteriorationRate>
                </statBases>
                <thingCategories>
                  <li>ResourcesRaw</li>
                </thingCategories>
                <stuffProps>
                  <stuffAdjective>log</stuffAdjective>
                  <categories>
                    <li>RawWoody</li>
                  </categories>
                  <commonality>1.00</commonality>
                  <color>(86,62,44)</color>
                  <appearance>Planks</appearance>
                  <constructEffect>ConstructWood</constructEffect>
                  <soundImpactStuff>BulletImpact_Wood</soundImpactStuff>
                  <soundMeleeHitSharp>MeleeHit_Wood</soundMeleeHitSharp>
                  <soundMeleeHitBlunt>MeleeHit_Wood</soundMeleeHitBlunt>
                  <statFactors>
                    <MaxHitPoints>0.50</MaxHitPoints>
                    <Beauty>0.7</Beauty>
                    <Flammability>1</Flammability>
                    <WorkToMake>2.0</WorkToMake>
                    <WorkToBuild>2.0</WorkToBuild>
                    <DoorOpenSpeed>1.5</DoorOpenSpeed>
                  </statFactors>
                </stuffProps>
                <tools>
                  <li>
                    <label>log</label>
                    <capacities>
                      <li>Blunt</li>
                    </capacities>
                    <power>10</power>
                    <cooldownTime>2</cooldownTime>
                  </li>
                </tools>
              </ThingDef>
              <ThingDef ParentName="ResourceBase">
                <defName>GreenIronwoodLumber</defName>
                <label>green ironwood lumber</label>
                <description>This ironwood lumber has been cut from logs, but has yet to be dried out in a controlled environment.</description>
                <graphicData>
                  <texPath>Things/Item/Resource/Lumber_Any</texPath>
                  <graphicClass>Graphic_StackCount</graphicClass>
                  <color>(90,80,53)</color>
                </graphicData>
                <soundInteract>Wood_Drop</soundInteract>
                <soundDrop>Wood_Drop</soundDrop>
                <statBases>
                  <MarketValue>1.4</MarketValue>
                  <MaxHitPoints>150</MaxHitPoints>
                  <Mass>0.4</Mass>
                  <Flammability>1.0</Flammability>
                  <DeteriorationRate>0.35</DeteriorationRate>
                </statBases>
                <thingCategories>
                  <li>ResourcesRaw</li>
                </thingCategories>
                <stuffProps>
                  <stuffAdjective>rough ironwood</stuffAdjective>
                  <categories>
                    <li>Woody</li>
                  </categories>
                  <commonality>1.00</commonality>
                  <color>(90,80,53)</color>
                  <appearance>Planks</appearance>
                  <constructEffect>ConstructWood</constructEffect>
                  <soundImpactStuff>BulletImpact_Wood</soundImpactStuff>
                  <soundMeleeHitSharp>MeleeHit_Wood</soundMeleeHitSharp>
                  <soundMeleeHitBlunt>MeleeHit_Wood</soundMeleeHitBlunt>
                  <statFactors>
                    <MaxHitPoints>0.60</MaxHitPoints>
                    <Beauty>0.9</Beauty>
                    <Flammability>0.9</Flammability>
                    <WorkToMake>1.5</WorkToMake>
                    <WorkToBuild>1.5</WorkToBuild>
                    <DoorOpenSpeed>1.3</DoorOpenSpeed>
                  </statFactors>
                </stuffProps>
              </ThingDef>
            </value>
          </li>
          <li Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName='Owl_WoodDryingRack']/comps/li[@Class='UniversalFermenter.CompProperties_UniversalFermenter']/processes</xpath>
            <value>
              <li>
                <thingDef>VG_IronWoodLog</thingDef>
                <ingredientFilter>
                  <thingDefs>
                    <li>GreenIronwoodLumber</li>
                  </thingDefs>
                </ingredientFilter>
                <usesTemperature>false</usesTemperature>
                <ruinedPerDegreePerHour>0</ruinedPerDegreePerHour>
                <maxCapacity>45</maxCapacity>
                <processDays>0.67</processDays>
                <sunFactor>
                  <min>0.4</min>
                  <max>1.0</max>
                </sunFactor>
                <rainFactor>
                  <min>1</min>
                  <max>0</max>
                </rainFactor>
                <snowFactor>
                  <min>1</min>
                  <max>0</max>
                </snowFactor>
                <windFactor>
                  <min>0.8</min>
                  <max>1.0</max>
                </windFactor>
                <temperatureSafe>
                  <min>-100</min>
                  <max>100</max>
                </temperatureSafe>
                <temperatureIdeal>
                  <min>0</min>
                  <max>100</max>
                </temperatureIdeal>
                <graphicSuffix>_full</graphicSuffix>
              </li>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <xpath>/Defs/ThingDef[defName='PlantTreeIronwood']/plant/harvestedThingDef</xpath>
            <value>
              <harvestedThingDef>RawIronwood</harvestedThingDef>
            </value>
          </li>
          <li Class="PatchOperationAdd">
            <xpath>/Defs</xpath>
            <value>
              <RecipeDef>
                <defName>MakeGreenIronwoodLumber</defName>
                <label>make green ironwood lumber</label>
                <description>Make a batch of green ironwood lumber using ironwood logs.</description>
                <jobString>Making green ironwood lumber from ironwood logs.</jobString>
                <effectWorking>CutStone</effectWorking>
                <soundWorking>Recipe_Machining</soundWorking>
                <workAmount>400</workAmount>
                <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
                <workSkill>Crafting</workSkill>
                <workSkillLearnFactor>0.25</workSkillLearnFactor>
                <targetCountAdjustment>20</targetCountAdjustment>
                <allowMixingIngredients>false</allowMixingIngredients>
                <ingredients>
                  <li>
                    <filter>
                      <thingDefs>
                        <li>RawIronwood</li>
                      </thingDefs>
                    </filter>
                    <count>20</count>
                  </li>
                </ingredients>
                <fixedIngredientFilter>
                  <thingDefs>
                    <li>RawIronwood</li>
                  </thingDefs>
                </fixedIngredientFilter>
                <products>
                  <GreenIronwoodLumber>20</GreenIronwoodLumber>
                </products>
                <recipeUsers>
                  <li>Owl_CarpentersTrestle</li>
                  <li>TableMachining</li>
                </recipeUsers>
              </RecipeDef>
              <RecipeDef>
                <defName>MakeGreenIronwoodLumber_Slow</defName>
                <label>make green ironwood lumber</label>
                <description>Make a batch of green ironwood lumber using ironwood logs.</description>
                <jobString>Making green ironwood lumber from ironwood logs.</jobString>
                <effectWorking>CutStone</effectWorking>
                <soundWorking>Recipe_Machining</soundWorking>
                <workAmount>1200</workAmount>
                <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
                <workSkill>Crafting</workSkill>
                <workSkillLearnFactor>0.25</workSkillLearnFactor>
                <targetCountAdjustment>20</targetCountAdjustment>
                <allowMixingIngredients>false</allowMixingIngredients>
                <ingredients>
                  <li>
                    <filter>
                      <thingDefs>
                        <li>RawIronwood</li>
                      </thingDefs>
                    </filter>
                    <count>20</count>
                  </li>
                </ingredients>
                <fixedIngredientFilter>
                  <thingDefs>
                    <li>RawIronwood</li>
                  </thingDefs>
                </fixedIngredientFilter>
                <products>
                  <Owl_GreenLumber>20</Owl_GreenLumber>
                </products>
                <recipeUsers>
                  <li>CraftingSpot</li>
                </recipeUsers>
              </RecipeDef>
            </value>
          </li>
        </operations>
      </match>
    </match>
  </Operation>
</Patch>